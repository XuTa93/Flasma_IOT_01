<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Flasma_IOT_01.Views.NgContentWindow"
        Width="400"
        Height="180"
        WindowStartupLocation="CenterOwner"
        Title="NG Content">

    <StackPanel Margin="15" Spacing="10">

        <TextBlock Text="Please write NG Content"
                   FontWeight="Bold"
                   FontSize="14"/>

        <TextBox x:Name="InputBox"
                 Watermark="Please write NG content..." />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="OK"
                    Width="80"
                    Click="Ok_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
